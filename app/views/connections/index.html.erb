<p id="notice"><%= notice %></p>

<h1>Connections</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Connection</th>
      <th>Provider code</th>
      <th>Provider name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @connections.each do |connection| %>
      <tr>
        <td><%= connection.customer_id %></td>
        <td><%= connection.connection_id %></td>
        <td><%= connection.provider_code %></td>
        <td><%= connection.provider_name %></td>
        <td><%= link_to 'Show', accounts_path(:connection_id => connection.connection_id)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Connection', new_connection_path %>
